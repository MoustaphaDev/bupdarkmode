---
import MobileToggle from "./MobileToggle.astro";

const {} = Astro.props;
---

<header
    class="sticky top-0 z-40 flex-none mx-auto w-[96%] bg-white/90 dark:bg-black backdrop-blur-sm border-b dark:border-b-0"
>
    <div
        class="py-3 px-3 mx-auto w-full md:flex md:justify-between max-w-[1400px] md:px-4 bg-white"
    >
        <!-- Mobile Menu -->
        <div class="flex justify-between">
            <a class="flex items-center" href="/">
                <!-- <Logo /> -->
                <img width="90" src="/assets/logo.webp" />
            </a>
            <div class="flex items-center md:hidden">
                <label class="swap swap-rotate">
                    <!-- this hidden checkbox controls the state -->
                    <input type="checkbox" data-aw-toggle-color-scheme />

                    <!-- sun icon -->
                    <svg
                        class="swap-on fill-current w-10 h-10"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        ><path
                            d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"
                        ></path>
                    </svg>

                    <!-- moon icon -->
                    <svg
                        class="swap-off fill-white w-10 h-10"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        ><path
                            d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"
                        ></path>
                    </svg>
                </label>

                <!-- Mobile Toggle Menu -->
                <MobileToggle />
            </div>
        </div>

        <!-- Large Screen Menu -->
        <nav
            class="items-center w-full md:w-auto hidden lg:flex text-gray-600 dark:text-slate-200"
            aria-label="Main navigation"
            id="menu"
        >
            <ul
                class="flex flex-col pt-8 md:pt-0 md:flex-row md:self-center collapse w-full md:w-auto collapsed text-xl md:text-base"
            >
                <li>
                    <a
                        class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
                        href="#"
                        >Home
                    </a>
                </li>
                <li>
                    <a
                        class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
                        href="#"
                        >BÅªP Smart Devices
                    </a>
                </li>
                <li>
                    <a
                        class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
                        href="/blog"
                        >Mockups
                    </a>
                </li>
                <li class="">
                    <a
                        class="hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
                        href="https://github.com/onwidget/astrowind"
                    >
                        Pricing
                    </a>
                </li>
                <li class="">
                    <a
                        class="hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
                        href="https://github.com/onwidget/astrowind"
                    >
                        FAQ
                    </a>
                </li>
                <li class="">
                    <a
                        class="hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
                        href="https://github.com/onwidget/astrowind"
                    >
                        Login
                    </a>
                </li>
            </ul>
            <div
                class="md:self-center flex items-center mb-4 md:mb-0 collapse collapsed"
            >
                <div class="hidden items-center mr-3 md:flex">
                    <label class="swap swap-rotate cursor-pointer">
                        <!-- this hidden checkbox controls the state -->
                        <input type="checkbox" data-aw-toggle-color-scheme />

                        <!-- sun icon -->
                        <svg
                            class="swap-on fill-current w-10 h-10"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            ><path
                                d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"
                            ></path>
                        </svg>

                        <!-- moon icon -->
                        <svg
                            class="swap-off fill-current w-10 h-10"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            ><path
                                d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"
                            ></path>
                        </svg>
                    </label>
                </div>
            </div>
        </nav>
    </div>
</header>

<style is:global>
    [data-aw-toggle-menu].expanded .line1 {
        transform: rotate(-45deg) translate(-12px, 8px);
    }

    [data-aw-toggle-menu].expanded .line2 {
        transform: rotate(45deg) translate(4px, -16px);
    }
</style>
